<% if category.length > 0 %>
  <div class="menu-section">
    <h3><%= name %></h3>
    <ul class="menu-list">
      <% category.each do |item| %>
        <li class="menu-item">
          <p class="lead"><%= item.name %></p>
          <p>
            <span class="emph"><%= item.description %></span> &mdash;
          </span class="lead"> <%= number_to_currency(item.price) %> </span>
          </p>
          <% if is_manager? %>
            <%= link_to "Edit",edit_item_path(item.id) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
