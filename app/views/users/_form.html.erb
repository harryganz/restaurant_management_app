<%= form_for @user do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %> <br>
  <%= f.label :role %> <br>
  <%= f.select :role do %>
    <% @roles.each do |role| %>
      <%= content_tag :option, role.titleize, value: role %>
    <% end %>
  <% end %>
  <%= f.label :password %> <br>
  <%= f.password_field :password %> <br>
  <%= f.label :password_confirmation %> <br>
  <%= f.password_field :password_confirmation %> <br>
  <%= f.submit %>
<% end %>
